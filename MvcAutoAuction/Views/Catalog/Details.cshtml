@model MvcAutoAuction.Models.Car

@{
    ViewBag.Title = "Car -" + Model.Title; 
}

<h2>@Model.Title</h2>

<p> 
    <img alt="@Model.Title" src="@Model.Image" />
</p>

<div id="car-details">
    <p>
        <em>Brand:</em> 
        @Model.Brand.Name
    </p>
    <p>
        <em>Auto:</em> 
        @Model.Auto.Name
    </p>
    <p>
        <em>Price:</em> 
        @String.Format("{0:F}", Model.Price)
    </p> 
              
    <p class="button"> 
        @Html.ActionLink("Add to cart", "AddToCart",
        "ShoppingCart", new { id = Model.CarId }, "")
    </p>

    <p>         
         Please click <a href="@Url.Content("~/bid/biddingform")">here</a> to place Your Bid!         
    </p>  
        <!-- Please click here Html.ActionLink("BiddingForm", "Bidding")  to place Your Bid! -->
        <!-- Html.ActionLink("Place Your Bid", "BiddingForm") -->
        <!-- Please click Html.ActionLink("here", "Bid") to place Your Bid! -->   
        <!--Please click the following link Html.ActionLink("Bid >>", "bid", "biddingForm") to place Your Bid! -->
          
</div>
