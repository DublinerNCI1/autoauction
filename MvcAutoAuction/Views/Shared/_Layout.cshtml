<!DOCTYPE html>
<html>
<head>    
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" 
        type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" 
        type="text/javascript"></script>    
</head>
<body>    
    <div id="header">        
        <h1>CAR SALES CATALOG</h1>
        <ul id="navlist">
        @if (Request.IsAuthenticated)
        {
            <li><a href="@Url.Content("~/Account/LogOff")">Logout</a></li>
        }
        else
        {
            <li><a href="@Url.Content("~/Account/LogOn")">Login</a></li>
        }

            <li class="first"><a href="@Url.Content("~")" id="current">Home</a></li>
            <li><a href="@Url.Content("~/Catalog/")">Catalog</a></li>
            <li>@{Html.RenderAction("CartSummary", "ShoppingCart");}</li>
            <li><a href="@Url.Content("~/CatalogManager/")">Admin</a></li>                                
        </ul> 
    </div> 

    @{Html.RenderAction("BrandMenu", "Catalog");}         

    <div id="main">
         @RenderBody()
    </div>
    
    <div id="footer">
        built with <a href="http://asp.net/mvc">ASP.NET MVC 3</a>
    </div>
  </body>
</html>
